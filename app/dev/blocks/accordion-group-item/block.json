{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "wpbs/accordion-group-item",
  "title": "Accordion Item",
  "description": "Display an accordion item",
  "selectors": {
    "root": ".wpbs-accordion-group-item"
  },
  "attributes": {
    "uniqueId": {
      "type": "string"
    }
  },
  "parent": [
    "wpbs/accordion-group"
  ],
  "allowedBlocks": [
    "wpbs/accordion-group-header",
    "wpbs/accordion-group-text"
  ],
  "usesContext": [
    "ElementTag"
  ],
  "providesContext": {
    "wpbs/groupId": "groupId"
  },
  "supports": {
    "html": false,
    "innerBlocks": true,
    "color": {
      "background": true,
      "text": true,
      "link": true,
      "gradients": true
    },
    "spacing": {
      "blockGap": [
        "vertical"
      ],
      "padding": true,
      "margin": false
    },
    "__experimentalBorder": {
      "size": true,
      "color": true,
      "radius": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "fontStyle": true,
      "fontWeight": true
    }
  },
  "editorScript": "file:./block.js",
  "icon": "excerpt-view"
}


