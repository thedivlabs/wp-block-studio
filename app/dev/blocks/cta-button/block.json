{
  "apiVersion": 3,
  "name": "wpbs/cta-button",
  "title": "CTA Button",
  "description": "Display a CTA button",
  "selectors": {
    "root": ".wpbs-cta-button"
  },
  "styles": [
    {
      "name": "primary",
      "label": "Primary"
    },
    {
      "name": "secondary",
      "label": "Secondary"
    },
    {
      "name": "outline",
      "label": "Outline"
    },
    {
      "name": "reverse",
      "label": "Reverse"
    },
    {
      "name": "link",
      "label": "Link"
    }
  ],
  "usesContext": [
    "wpbs/loopItem",
    "postId"
  ],
  "supports": {
    "interactivity": true,
    "dimensions": {
      "minHeight": true
    },
    "shadow": true,
    "color": {
      "background": true,
      "text": true,
      "link": false,
      "gradients": true
    },
    "__experimentalBorder": {
      "color": true,
      "radius": true,
      "style": true
    },
    "spacing": {
      "blockGap": [
        "horizontal"
      ],
      "margin": true,
      "padding": true
    },
    "typography": {
      "__experimentalFontFamily": true,
      "__experimentalFontWeight": true,
      "textAlign": true,
      "fontSize": true,
      "lineHeight": true,
      "__experimentalTextTransform": true
    }
  },
  "editorScript": "file:./block.js",
  "editorStyle": "file:./block.css",
  "style": "file:./block.css",
  "icon": "admin-links",
  "render": "file:./render.php"
}


