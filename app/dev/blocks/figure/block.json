{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "wpbs/figure",
  "title": "Figure",
  "description": "Display a figure element",
  "attributes": {
    "uniqueId": {
      "type": "string"
    },
    "preload": {
      "type": "array"
    },
    "postId": {
      "type": "string"
    }
  },
  "usesContext": [ "postId" ],
  "selectors": {
    "root": ".wpbs-figure"
  },
  "supports": {
    "layout": false,
    "interactivity": true,
    "color": {
      "background": true,
      "text": true,
      "link": true,
      "gradients": true
    },
    "spacing": {
      "padding": true,
      "margin": true
    },
    "__experimentalBorder": {
      "size": true,
      "color": true,
      "radius": true
    }
  },
  "editorScript": "file:./js/edit.js",
  "viewScriptModule": "file:./js/view.js",
  "render": "file:./render.php",
  "style": "file:./js/edit.css",
  "icon": "format-image"
}


