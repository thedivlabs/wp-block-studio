{
  "name": "wpbs/layout-grid-card",
  "title": "Grid Card",
  "description": "Display a layout grid card",
  "selectors": {
    "root": ".wpbs-layout-grid-card"
  },
  "attributes": {
    "uniqueId": {
      "type": "string",
      "show_in_rest": true
    },
    "postId": {
      "type": "integer",
      "show_in_rest": true
    },
    "termId": {
      "type": "integer",
      "default": 0,
      "show_in_rest": true
    }
  },
  "parent": [
    "wpbs/layout-grid"
  ],
  "providesContext": {
    "postId": "postId",
    "wpbs/termId": "termId",
    "postType": "postType"
  },
  "supports": {
    "interactivity": true,
    "innerBlocks": true,
    "color": {
      "background": true,
      "text": true,
      "link": true,
      "gradients": true
    },
    "spacing": {
      "blockGap": [
        "horizontal",
        "vertical"
      ],
      "padding": true,
      "margin": true
    },
    "__experimentalBorder": {
      "size": true,
      "color": true,
      "radius": true
    },
    "typography": {
      "__experimentalFontFamily": true,
      "__experimentalFontWeight": true,
      "textAlign": true,
      "fontSize": true,
      "lineHeight": true
    }
  },
  "editorScript": "file:./js/edit.js",
  "icon": "grid-view",
  "render": "file:./render.php"
}


