{
  "apiVersion": 3,
  "name": "wpbs/layout-grid-container",
  "title": "Layout Grid Container",
  "description": "Display a grid container",
  "selectors": {
    "root": ".wpbs-layout-grid-container"
  },
  "attributes": {
    "uniqueId": {
      "type": "string"
    },
    "isLoop": {
      "type": "boolean"
    },
    "isGallery": {
      "type": "boolean"
    }
  },
  "usesContext": [
    "wpbs/termId",
    "wpbs/postId",
    "wpbs/isLoop",
    "wpbs/query",
    "wpbs/isGallery",
    "wpbs/grid"
  ],
  "supports": {
    "interactivity": true,
    "innerBlocks": true,
    "color": {
      "background": true,
      "text": true,
      "link": true,
      "gradients": true
    },
    "spacing": {
      "blockGap": [
        "horizontal",
        "vertical"
      ],
      "padding": true,
      "margin": true
    },
    "shadow": true,
    "__experimentalBorder": {
      "size": true,
      "color": true,
      "radius": true
    },
    "typography": {
      "__experimentalFontFamily": true,
      "__experimentalFontWeight": true,
      "textAlign": true,
      "fontSize": true,
      "lineHeight": true
    }
  },
  "editorScript": "file:./block.js",
  "style": "file:./block.css",
  "render": "file:./render.php",
  "icon": "editor-kitchensink"
}


