{
  "name": "wpbs/layout-grid",
  "title": "Layout Grid",
  "description": "Display a layout grid",
  "selectors": {
    "root": ".wpbs-layout-grid"
  },
  "attributes": {
    "uniqueId": {
      "type": "string",
      "show_in_rest": true
    }
  },
  "allowedBlocks": [
    "wpbs/layout-element",
    "wpbs/layout-grid-container",
    "wpbs/pagination-button",
    "core/query-pagination"
  ],
  "styles": [
    {
      "name": "loop",
      "label": "Loop"
    }
  ],
  "providesContext": {
    "wpbs/grid": "wpbs-grid",
    "wpbs/query": "wpbs-query"
  },
  "supports": {
    "layout": false,
    "interactivity": true,
    "innerBlocks": true,
    "color": {
      "background": true,
      "text": true,
      "link": true,
      "gradients": true
    },
    "spacing": {
      "blockGap": [
        "horizontal",
        "vertical"
      ],
      "padding": true,
      "margin": true
    },
    "__experimentalBorder": {
      "size": true,
      "color": true,
      "radius": true
    },
    "typography": {
      "__experimentalFontFamily": true,
      "__experimentalFontWeight": true,
      "textAlign": true,
      "fontSize": true,
      "lineHeight": true
    }
  },
  "editorScript": "file:./block.js",
  "viewScriptModule": "file:./view.js",
  "style": "file:./block.css",
  "editorStyle": "file:./block.css",
  "icon": "grid-view"
}


