{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "wpbs/layout-grid",
  "title": "Layout Grid",
  "description": "Display a layout grid",
  "selectors": {
    "root": ".wpbs-layout-grid"
  },
  "attributes": {
    "uniqueId": {
      "type": "string"
    },
    "queryArgs": {
      "type": "object"
    }
  },
  "allowedBlocks": [
    "wpbs/layout-grid-card"
  ],
  "providesContext": {
    "wpbs/queryArgs": "queryArgs"
  },
  "supports": {
    "interactivity": true,
    "innerBlocks": true,
    "color": {
      "background": true,
      "text": true,
      "link": true,
      "gradients": true
    },
    "spacing": {
      "blockGap": [
        "horizontal",
        "vertical"
      ],
      "padding": true,
      "margin": true
    },
    "__experimentalBorder": {
      "size": true,
      "color": true,
      "radius": true
    },
    "typography": {
      "__experimentalFontFamily": true,
      "__experimentalFontWeight": true,
      "textAlign": true,
      "fontSize": true,
      "lineHeight": true
    }
  },
  "editorScript": "file:./js/edit.js",
  "viewScriptModule": "file:./js/view.js",
  "style": "file:./js/edit.css",
  "editorStyle": "file:./js/edit.css",
  "icon": "grid-view",
  "render": "file:./render.php"
}


