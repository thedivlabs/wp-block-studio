{
  "name": "wpbs/layout-grid",
  "title": "Layout Grid",
  "description": "Display a layout grid",
  "selectors": {
    "root": ".wpbs-layout-grid"
  },
  "attributes": {
    "uniqueId": {
      "type": "string",
      "show_in_rest": true
    },
    "queryArgs": {
      "type": "object",
      "show_in_rest": true
    },
    "cardTemplate": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-columns-mobile": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-columns-small": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-columns-large": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-breakpoint-small": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-breakpoint-large": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-masonry": {
      "type": "boolean",
      "show_in_rest": true
    },
    "wpbs-divider": {
      "type": "object",
      "show_in_rest": true
    },
    "wpbs-divider-icon": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-divider-icon-size": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-divider-icon-color": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-pagination-size": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-pagination-label": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-loop-orderby": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-loop-order": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-loop-type": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-loop-term": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-loop-taxonomy": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-loop-page-size": {
      "type": "string",
      "show_in_rest": true
    },
    "wpbs-loop-suppress": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "show_in_rest": true
    },
    "wpbs-gallery": {
      "type": "string",
      "show_in_rest": true
    }
  },
  "allowedBlocks": [
    "wpbs/layout-grid-card"
  ],
  "styles": [
    {
      "name": "loop",
      "label": "Loop"
    }
  ],
  "supports": {
    "html": false,
    "layout": false,
    "interactivity": true,
    "innerBlocks": true,
    "color": {
      "background": true,
      "text": true,
      "link": true,
      "gradients": true
    },
    "spacing": {
      "blockGap": [
        "horizontal",
        "vertical"
      ],
      "padding": true,
      "margin": true
    },
    "__experimentalBorder": {
      "size": true,
      "color": true,
      "radius": true
    },
    "typography": {
      "__experimentalFontFamily": true,
      "__experimentalFontWeight": true,
      "textAlign": true,
      "fontSize": true,
      "lineHeight": true
    }
  },
  "editorScript": "file:./js/edit.js",
  "viewScriptModule": "file:./js/view.js",
  "style": "file:./js/edit.css",
  "editorStyle": "file:./js/edit.css",
  "icon": "grid-view",
  "render": "file:./render.php"
}


