{
  "apiVersion": 3,
  "name": "wpbs/layout-grid",
  "title": "Layout Grid",
  "icon": "grid-view",
  "description": "Displays a content grid",
  "allowedBlocks": [
    "wpbs/layout-grid-container",
    "wpbs/layout-grid-pagination"
  ],
  "styles": [
    {
      "name": "loop",
      "label": "Loop"
    },
    {
      "name": "gallery",
      "label": "Gallery"
    }
  ],
  "attributes": {
    "uniqueId": {
      "type": "string"
    },
    "isLoop": {
      "type": "boolean"
    },
    "isGallery": {
      "type": "boolean"
    },
    "wpbs-query": {
      "type": "object",
      "show_in_rest": true
    },
    "wpbs-grid": {
      "type": "object"
    }
  },
  "providesContext": {
    "wpbs/query": "wpbs-query",
    "wpbs/grid": "wpbs-grid",
    "wpbs/isLoop": "isLoop",
    "wpbs/isGallery": "isGallery"
  },
  "supports": {
    "innerBlocks": true,
    "alignWide": true,
    "layout": false,
    "interactivity": true,
    "color": {
      "background": true,
      "text": true,
      "link": false,
      "gradients": true
    },
    "__experimentalBorder": {
      "color": true,
      "radius": true,
      "style": true
    },
    "spacing": {
      "blockGap": [
        "horizontal",
        "vertical"
      ],
      "margin": true,
      "padding": true
    }
  },
  "viewScriptModule": "file:./view.js",
  "editorScript": "file:./block.js",
  "style": "file:./block.css"
}
