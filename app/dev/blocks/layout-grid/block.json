{
  "apiVersion": 3,
  "name": "wpbs/layout-grid",
  "title": "Layout Grid",
  "icon": "grid-view",
  "description": "Displays a content grid",
  "allowedBlocks": [
    "wpbs/layout-grid-container"
  ],
  "supports": {
    "innerBlocks": true,
    "alignWide": true,
    "layout": false,
    "interactivity": true,
    "color": {
      "background": true,
      "text": true,
      "link": false,
      "gradients": true
    },
    "__experimentalBorder": {
      "color": true,
      "radius": true,
      "style": true
    },
    "spacing": {
      "blockGap": [
        "horizontal",
        "vertical"
      ],
      "margin": true,
      "padding": true
    }
  },
  "viewScriptModule": "file:./view.js",
  "editorScript": "file:./block.js",
  "style": "file:./block.css"
}
