{
  "name": "wpbs/layout-grid",
  "title": "Layout Grid",
  "description": "Display a layout grid",
  "selectors": {
    "root": ".wpbs-layout-grid"
  },
  "attributes": {
    "uniqueId": {
      "type": "string",
      "show_in_rest": true
    },
    "styleCss": {
      "type": "string",
      "show_in_rest": true
    },
    "queryArgs": {
      "type": "object",
      "show_in_rest": true
    },
    "cardTemplate": {
      "type": "string",
      "show_in_rest": true
    }
  },
  "allowedBlocks": [
    "wpbs/layout-grid-card",
    "core/query-pagination"
  ],
  "styles": [
    {
      "name": "loop",
      "label": "Loop"
    },
    {
      "name": "gallery",
      "label": "Gallery"
    }
  ],
  "supports": {
    "layout": false,
    "interactivity": true,
    "innerBlocks": true,
    "color": {
      "background": true,
      "text": true,
      "link": true,
      "gradients": true
    },
    "spacing": {
      "blockGap": [
        "horizontal",
        "vertical"
      ],
      "padding": true,
      "margin": true
    },
    "__experimentalBorder": {
      "size": true,
      "color": true,
      "radius": true
    },
    "typography": {
      "__experimentalFontFamily": true,
      "__experimentalFontWeight": true,
      "textAlign": true,
      "fontSize": true,
      "lineHeight": true
    }
  },
  "editorScript": "file:./js/edit.js",
  "viewScriptModule": "file:./js/view.js",
  "style": "file:./js/edit.css",
  "editorStyle": "file:./js/edit.css",
  "icon": "grid-view",
  "render": "file:./render.php"
}


