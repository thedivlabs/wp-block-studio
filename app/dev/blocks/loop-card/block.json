{
  "apiVersion": 3,
  "name": "wpbs/grid-card",
  "title": "Loop Card",
  "description": "Display a loop card",
  "selectors": {
    "root": ".wpbs-grid-card"
  },
  "attributes": {
    "uniqueId": {
      "type": "string"
    },
    "postId": {
      "type": "string"
    },
    "termId": {
      "type": "string"
    },
    "isLoop": {
      "type": "boolean"
    }
  },
  "usesContext": [
    "wpbs/isLoop",
    "wpbs/postId",
    "termId",
    "wpbs/termId",
    "wpbs/postType"
  ],
  "providesContext": {
    "wpbs/postId": "postId",
    "wpbs/termId": "termId",
    "termId": "termId"
  },
  "supports": {
    "interactivity": true,
    "innerBlocks": true,
    "color": {
      "background": true,
      "text": true,
      "link": true,
      "gradients": true
    },
    "spacing": {
      "blockGap": [
        "horizontal",
        "vertical"
      ],
      "padding": true,
      "margin": true
    },
    "shadow": true,
    "__experimentalBorder": {
      "size": true,
      "color": true,
      "radius": true
    },
    "typography": {
      "__experimentalFontFamily": true,
      "__experimentalFontWeight": true,
      "textAlign": true,
      "fontSize": true,
      "lineHeight": true
    }
  },
  "editorScript": "file:./block.js",
  "style": "file:./block.css",
  "icon": "editor-kitchensink",
  "render": "file:./render.php"
}


