{
  "name": "wpbs/review-card",
  "title": "Review Card",
  "description": "Display a review card",
  "selectors": {
    "root": ".wpbs-review-card"
  },
  "attributes": {
    "uniqueId": {
      "type": "string",
      "show_in_rest": true
    },
    "review": {
      "type": "object",
      "show_in_rest": true
    }
  },
  "parent": [
    "wpbs/review-gallery"
  ],
  "usesContext": [
    "wpbs/review"
  ],
  "providesContext": {
    "wpbs/review": "review"
  },
  "supports": {
    "innerBlocks": true,
    "color": {
      "background": true,
      "text": true,
      "link": true,
      "gradients": true
    },
    "spacing": {
      "blockGap": [
        "horizontal",
        "vertical"
      ],
      "padding": true,
      "margin": true
    },
    "shadow": true,
    "__experimentalBorder": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "typography": {
      "__experimentalFontFamily": true,
      "__experimentalFontWeight": true,
      "textAlign": true,
      "fontSize": true,
      "lineHeight": true
    }
  },
  "editorScript": "file:./block.js",
  "icon": "grid-view",
  "render": "file:./render.php"
}


