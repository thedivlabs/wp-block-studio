{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "wpbs/slide",
  "title": "Slide",
  "description": "Display a slide element",
  "selectors": {
    "root": ".wpbs-slide"
  },
  "parent": [
    "wpbs/slider"
  ],
  "attributes": {
    "uniqueId": {
      "type": "string"
    }
  },
  "supports": {
    "innerBlocks": true,
    "color": {
      "background": true,
      "text": true,
      "link": true,
      "gradients": true
    },
    "spacing": {
      "padding": true,
      "margin": true
    },
    "__experimentalBorder": {
      "size": true,
      "color": true,
      "radius": true
    }
  },
  "editorScript": "file:./js/edit.js",
  "viewScriptModule": "file:./js/view.js",
  "style": "file:./js/edit.css",
  "icon": "slides"
}


