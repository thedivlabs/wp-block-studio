{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "wpbs/slide",
  "title": "Slide",
  "description": "Display a slide element",
  "selectors": {
    "root": ".wpbs-slide"
  },
  "parent": [
    "wpbs/slider-wrapper"
  ],
  "styles": [
    {
      "name": "image",
      "label": "Image"
    }
  ],
  "attributes": {
    "uniqueId": {
      "type": "string",
      "show_in_rest": true
    },
    "postId": {
      "type": "integer",
      "show_in_rest": true
    },
    "termId": {
      "type": "integer",
      "default": 0,
      "show_in_rest": true
    }
  },
  "providesContext": {
    "wpbs/postId": "postId",
    "wpbs/termId": "termId",
    "wpbs/postType": "postType"
  },
  "supports": {
    "innerBlocks": true,
    "interactivity": true,
    "color": {
      "background": true,
      "text": true,
      "link": true,
      "gradients": true
    },
    "spacing": {
      "padding": true,
      "margin": true
    },
    "__experimentalBorder": {
      "size": true,
      "color": true,
      "radius": true
    }
  },
  "editorScript": "file:./js/edit.js",
  "viewScriptModule": "file:./js/view.js",
  "style": "file:./js/edit.css",
  "icon": "slides",
  "render": "file:./render.php"
}


