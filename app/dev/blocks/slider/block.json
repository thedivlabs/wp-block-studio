{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "wpbs/slider",
  "title": "Slider",
  "description": "Display a slider element",
  "selectors": {
    "root": ".wpbs-slider"
  },
  "attributes": {
    "uniqueId": {
      "type": "string"
    },
    "isLoop": {
      "type": "boolean"
    },
    "wpbs-query": {
      "type": "object",
      "show_in_rest": true
    }
  },
  "allowedBlocks": [
    "wpbs/slider-wrapper",
    "wpbs/layout-element",
    "wpbs/slider-navigation"
  ],
  "styles": [
    {
      "name": "loop",
      "label": "Loop"
    },
    {
      "name": "gallery",
      "label": "Gallery"
    }
  ],
  "providesContext": {
    "wpbs/query": "wpbs-query",
    "wpbs/slider": "wpbs-slider",
    "wpbs/isLoop": "isLoop"
  },
  "supports": {
    "innerBlocks": true,
    "interactivity": true,
    "color": {
      "background": true,
      "text": true,
      "link": true,
      "gradients": true
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "blockGap": [
        "vertical"
      ]
    },
    "__experimentalBorder": {
      "size": true,
      "color": true,
      "radius": true
    }
  },
  "editorScript": [
    "file:./block.js"
  ],
  "style": [
    "swiper-css"
  ],
  "icon": "slides"
}


